{
  "name": "heaven-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:init": "wrangler d1 execute heaven-api --local --file=./schema.sql",
    "db:init:remote": "wrangler d1 execute heaven-api --remote --file=./schema.sql",
    "seed": "bun run scripts/seed.ts && wrangler d1 execute heaven-api --local --file=./scripts/seed.sql",
    "seed:remote": "bun run scripts/seed.ts && wrangler d1 execute heaven-api --remote --file=./scripts/seed.sql",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.4.0",
    "viem": "2.44.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240524.0",
    "typescript": "^5.4.5",
    "wrangler": "^3.57.0"
  }
}
